<body>
  <h1>Pill Dispenser Local</h1>

  <div class="card">
    <label>Cutie:</label>
    <select id="cutie">
      <option value="0">Cutie 1</option>
      <option value="1">Cutie 2</option>
      <option value="2">Cutie 3</option>
      <option value="3">Cutie 4</option>
    </select>

    <label>Ora (HHMM):</label>
    <input type="text" id="ora" placeholder="ex: 1200">

    <button onclick="trimiteComanda()">Trimite Comanda</button>
  </div>

  <div class="card">
    <button onclick="afiseazaLog()">Vezi Loguri</button>
    <pre id="loguri"></pre>
  </div>

  <p id="status"></p>

  <script>
    const serverIP = "http://192.168.100.39"; // IP-ul local Arduino

    function trimiteComanda() {
      const cutie = document.getElementById("cutie").value;
      const ora = document.getElementById("ora").value;

      const url = `${serverIP}/set?cutie=${cutie}&ora=${ora}`;
      document.getElementById("status").innerText = "Trimitem comanda...";

      fetch(url)
        .then(res => res.text())
        .then(text => {
          document.getElementById("status").innerText = "RÄƒspuns: " + text;
        })
        .catch(err => {
          document.getElementById("status").innerText = "Eroare: " + err;
        });
    }

    function afiseazaLog() {
      fetch(`${serverIP}/logs`)
        .then(res => res.text())
        .then(text => {
          document.getElementById("loguri").innerText = text;
        })
        .catch(err => {
          document.getElementById("loguri").innerText = "Eroare la loguri: " + err;
        });
    }
  </script>
</body>
